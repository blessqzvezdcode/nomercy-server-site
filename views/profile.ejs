    <script>
    // Load user listings
    async function loadUserListings() {
        try {
            const response = await fetch('/api/market/listings');
            const data = await response.json();
            
            if (data.success) {
                const userListingsDiv = document.getElementById('user-listings');
                const currentUserId = '<%= person.id %>';
                
                // Filter listings by current user
                const userListings = data.listings.filter(listing => listing.owner === currentUserId);
                
                if (userListings.length > 0) {
                    userListingsDiv.innerHTML = '';
                    userListings.forEach(listing => {
                        const listingElement = document.createElement('div');
                        listingElement.className = 'listing-item';
                        listingElement.innerHTML = `
                            <div class="listing-info">
                                <h4>${listing.title}</h4>
                                <p>${listing.description}</p>
                                <div class="listing-meta">
                                    <span class="listing-price">${listing.price} NMCoin</span>
                                    <span class="listing-type">${listing.type === 'auction' ? '–ê—É–∫—Ü–∏–æ–Ω' : '–ü—Ä—è–º–∞—è –ø—Ä–æ–¥–∞–∂–∞'}</span>
                                    <span class="listing-status status-${listing.status}">${getStatusText(listing.status)}</span>
                                </div>
                            </div>
                            <div class="listing-actions">
                                ${listing.status === 'active' ? `
                                    <button class="btn delete-listing-btn" onclick="deleteListing('${listing.id}')">
                                        üóëÔ∏è –£–¥–∞–ª–∏—Ç—å
                                    </button>
                                ` : ''}
                            </div>
                        `;
                        userListingsDiv.appendChild(listingElement);
                    });
                } else {
                    userListingsDiv.innerHTML = '<div class="empty-state"><span class="empty-icon">üì¶</span><p>–ù–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã—Ö –ª–æ—Ç–æ–≤</p></div>';
                }
            } else {
