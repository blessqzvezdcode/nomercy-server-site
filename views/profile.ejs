                    '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ª–æ—Ç–æ–≤</div>';
            }
        } catch (error) {
            console.error('Error loading user listings:', error);
            document.getElementById('user-listings').innerHTML = 
                '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ª–æ—Ç–æ–≤</div>';
        }
    }

    function getStatusText(status) {
        const statusMap = {
            'active': '–ê–∫—Ç–∏–≤–µ–Ω',
            'sold': '–ü—Ä–æ–¥–∞–Ω',
            'closed': '–ó–∞–∫—Ä—ã—Ç',
            'pending': '–û–∂–∏–¥–∞–µ—Ç'
        };
        return statusMap[status] || status;
    }

    async function deleteListing(listingId) {
        if (!confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç –ª–æ—Ç?')) return;
        
        try {
            const response = await fetch(`/api/market/delete/${listingId}`, {
                method: 'DELETE'
            });
            
            if (response.ok) {
                loadUserListings();
            } else {
                alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏ –ª–æ—Ç–∞');
            }
