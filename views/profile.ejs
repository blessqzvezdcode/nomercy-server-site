            alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏ –ª–æ—Ç–∞: ' + error.message);
        }
    }

    // Load listings on page load
    document.addEventListener('DOMContentLoaded', function() {
        loadUserListings();
    });
    </script>
