{
  "name": "nomercy-server-site",
  "version": "1.0.0",
  "description": "NoMercy Marketplace - Trading platform with gacha system",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development node server.js",
    "start:win": "set NODE_ENV=production && node server.js",
    "dev:win": "set NODE_ENV=development && node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop nomercy-server",
    "pm2:restart": "pm2 restart nomercy-server",
    "pm2:logs": "pm2 logs nomercy-server",
    "setup": "npm run setup:win || npm run setup:unix",
    "setup:win": "if not exist logs mkdir logs && if not exist public\\uploads mkdir public\\uploads",
    "setup:unix": "mkdir -p logs && mkdir -p public/uploads"
  },
  "keywords": [
    "marketplace",
    "trading",
    "gacha",
    "cards",
    "gaming"
  ],
  "author": "NoMercy Team",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.0",
    "validator": "^13.15.15",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.0"
  }
}
